      //this will be automatically generated in the future from publications KB.
      function drawStuff() {
        var data = new google.visualization.arrayToDataTable([
          ['Year', '#Publications', '#citation*10^-2'],
          ["1996", 3, 2],
          ["1997", 3, 2],
          ["1998", 4, 2],
