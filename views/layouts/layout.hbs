          ['2005', 15, 25],
          ['2006', 17, 31],
          ['2007', 22, 33],
          ['2008', 19, 33],
          ['2009', 59, 34],
          ['2010', 42, 34],
          ['2011', 46, 33],
          ['2012', 78, 30],
          ['2013', 74, 31],
          ['2014', 56, 30],
          ['2015', 54, 30],
          ['2016', 50, 28],
          ['2017', 20, 22]
        ]);

        var options = {
          backgroundColor: { fill:'transparent' },
          width: 1200,
          legend: { position: 'none', color: '#FFF' },
          legendTextStyle: { color: '#FFF' },
          titleTextStyle: { color: '#FFF' },
          chart: {
            title: 'number of publications and citations from the KR&R group by year',
            subtitle: 'citation number incompletely retrieved from Google Scholar' },
          axes: {
            color: '#FFF',
            x: {
              0: { side: 'bottom', label: 'blue = #publications ; red = #citations', color: '#FFF'} // Top x-axis.
            }

          },
          bar: { groupWidth: "90%" , color: '#FFF'}
        };

        var chart = new google.charts.Bar(document.getElementById('top_x_div'));
        // Convert the Classic options to Material options.
        chart.draw(data, google.charts.Bar.convertOptions(options));
      };
    </script>

